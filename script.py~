#!/usr/bin/python
import numpy as np
import coding_matern as coding
import matplotlib
matplotlib.use('Agg')
from matplotlib import pyplot as plt

order = 2
phis = np.arange(0.0,2.0,0.01)
sigmas = np.zeros((phis.size,order,order))
sigmasmf = np.zeros((phis.size,order,order))
sigmaseq = np.zeros((phis.size,order,order))

fig = plt.figure()
ax = fig.add_subplot(1,1,1)

for i,phi in enumerate(phis):
	print i, "of", phis.size
	[sigmas[i,:,:], sigmasmf[i,:,:], sigmaseq[i,:,:], xs, freqs] = coding.getMaternEqVariance(samples = 10000, phi = phi)
	ax.plot(xs,freqs)
